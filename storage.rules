rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files, so anyone can see product/review images.
    match /{allPaths=**} {
      allow read;
    }

    // Allow authenticated users to write to the 'products' and 'reviews' folders.
    // This rule also enforces a size limit of 2MB for uploads.
    match /products/{allPaths=**} {
      allow write: if request.auth != null && request.resource.size < 2 * 1024 * 1024;
    }

    match /reviews/{allPaths=**} {
      allow write: if request.auth != null && request.resource.size < 2 * 1024 * 1024;
    }
  }
}
